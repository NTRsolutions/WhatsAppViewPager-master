<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:id ="@+id/layout1"
        android:layout_width="match_parent"
        android:gravity="center"
        android:paddingTop="16dp"
        android:layout_height="wrap_content">

        <ImageView

            android:id="@+id/share"
            android:layout_width="42dp"
            android:layout_height="42dp"

            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/deleteb"
            android:layout_marginEnd="18dp"
            android:layout_marginRight="18dp"
            android:paddingBottom="2dp"
            android:paddingTop="2dp"
            android:src="@drawable/share"
            android:text="Close"
            android:textColor="#ffffff"></ImageView>


        <ImageView

            android:id="@+id/deleteb"
            android:layout_width="42dp"
            android:layout_height="42dp"

            android:layout_alignBottom="@+id/list_desc"
            android:layout_marginEnd="9dp"
            android:layout_marginRight="9dp"
            android:layout_toLeftOf="@+id/share"
            android:layout_toStartOf="@+id/share"
            android:paddingBottom="2dp"
            android:src="@drawable/deletetab"
            android:text="Close"
            android:textColor="#ffffff" />



        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/list_avatar"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/left"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            app:civ_border_width="2dp"
            app:civ_border_color="#FF000000"

            />


        <ImageView
            android:id="@+id/playbtn"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_toRightOf="@+id/list_title"
            android:layout_centerVertical="true"
            android:src="@drawable/playbutton"
            android:layout_marginLeft="10dp"
            android:visibility="gone"/>
        <ImageView
            android:id="@+id/pic"
            android:visibility="gone"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_toRightOf="@+id/list_title"
            android:layout_centerVertical="true"
            android:src="@drawable/picture"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_marginTop="20dp"
            android:id="@+id/list_title"
            android:layout_alignParentTop="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/list_avatar"
            android:text="PlayList "
            android:textStyle="bold"
            android:textColor="#000000"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="16sp"

            android:layout_centerVertical="true"/>

        <TextView

            android:visibility="visible"
            android:id="@+id/list_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/list_title"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/list_avatar"
            android:textColor="#000000"
            android:ellipsize="end"

            android:text="songlist"

            android:textAppearance="?attr/textAppearanceListItem"
            android:textSize="12sp" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginLeft="80dp"
        android:layout_below="@+id/layout1"
        android:background="#aeb6bf"
        android:layout_marginTop="10dp"/>
</RelativeLayout>