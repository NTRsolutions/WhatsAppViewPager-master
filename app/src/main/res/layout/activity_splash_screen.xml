<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >



    <RelativeLayout

        android:id="@+id/layoutTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

        <ImageView
           android:src="@drawable/logoo"
            android:id="@+id/whatsapptxt"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_gravity="center"
            android:layout_marginTop="80dp"
            android:gravity="center"
            android:text="WhatsApp"
            android:textColor="#ffffff"
            android:textSize="30dp" />

        <TextView
            android:id="@+id/actualtxt"
            android:layout_marginTop="10dp"
            android:layout_centerInParent="true"
            android:layout_below="@id/whatsapptxt"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:src="@drawable/belowtxt"
            android:text="Status Downloader"
            android:gravity="center"
            android:textSize="25.5dp"
            android:textColor="#12C5B6"
            android:textStyle="bold"

            ></TextView>

        <TextView
            android:layout_below="@+id/actualtxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="For whasapp"
            android:textSize="20dp"
            android:textColor="#4EEAA4"/>


    </RelativeLayout>



    <RelativeLayout
        android:id="@+id/layoutBottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/layoutTop" >
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/layoutTop"
        android:layout_height="match_parent"
        android:gravity="bottom|center"
        android:layout_marginBottom="60dp"
        android:orientation="vertical">
        <Button
            android:id="@+id/recentstories"
            android:onClick="recentStories"
            android:textColor="#ffffff"
            android:text="Recent stories"
            android:background="@drawable/btnboarder"
            android:layout_width="250dp"
            android:layout_height="wrap_content" />
        <Button

            android:onClick="saved"
            android:text="Saved Stories"
            android:textColor="#ffffff"
            android:background="@drawable/btnboarder"
            android:layout_width="250dp"
            android:layout_margin="5dp"
            android:layout_height="wrap_content" />
        <Button
            android:text="How to Use"
            android:textColor="#ffffff"
            android:background="@drawable/btnboarder"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:onClick="howtouse"/>
    </LinearLayout>

</RelativeLayout>