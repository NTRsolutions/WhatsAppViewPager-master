<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="whatsappDown.Status.HowToUse">

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
android:background="@drawable/borderrelative"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="120dp"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/openwhatsapp"
            android:textSize="25dp" />
        <TextView
            android:padding="5dp"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/openwhatsapp2"
            />

        <TextView
            android:padding="5dp"
            android:textSize="25dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/openwhatsapp3"
            />

        <Button
            android:onClick="openwhatsapp"
            android:textColor="#ffffff"
            android:textStyle="bold"
            android:padding="15dp"
            android:text="Open WhatsAp"
            android:background="@drawable/btnboarder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp"/>
    </LinearLayout>

</RelativeLayout>
