<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="whatsappDown.Status">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:hardwareAccelerated="false"
        android:icon="@drawable/appicon"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="whatsappDown.Status.ViewPager.TabWithIconActivity" />
        <activity android:name="whatsappDown.Status.ViewPager.TabWOIconActivity" />
        <activity android:name="whatsappDown.Status.SplashScreen"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:screenOrientation="portrait"
            android:name="whatsappDown.Status.ImageDetail" />
        <activity
            android:screenOrientation="portrait"
            android:name="whatsappDown.Status.VideoDetail" />
        <activity
            android:screenOrientation="portrait"
            android:name="whatsappDown.Status.ImageSlider" />
        <activity
            android:screenOrientation="portrait"
            android:name="whatsappDown.Status.VideoSlider" />
        <activity
            android:screenOrientation="portrait"
            android:name="whatsappDown.Status.ViewPager.CustomTabActivity" />
        <activity
            android:screenOrientation="portrait"
            android:name="whatsappDown.Status.test" />
        <activity
            android:screenOrientation="portrait"
            android:name="whatsappDown.Status.SavedVideoSlider" />
        <activity
            android:screenOrientation="portrait"
            android:name="whatsappDown.Status.HowToUse"></activity>
    </application>

</manifest>